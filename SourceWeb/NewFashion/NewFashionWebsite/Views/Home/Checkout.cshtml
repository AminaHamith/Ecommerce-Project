        <!--end:delivery-->
        <div id="deliverymethod" class="hide">
            <p>Phương thức bạn có thể thanh toán</p>
            <label class="inline">
                <input type="radio" value="option1">
                Nhận tại cửa hàng
                                   
            </label>
            <label class="inline">
                <input type="radio" value="option1">
                Giao tận nhà
                                   
            </label>
            <textarea rows="3">Add Comment here...</textarea>
            <br>
            <span><a href="#">Continue</a></span>
        </div>
        <!--end:deliverymethod-->
        <div id="payment" class="hide">
            <p>Please select the preferred payment method to use on this order.</p>
            <label class="inline">
                <input type="radio" value="option1">
                Cash on delivery
                                   
            </label>
            <textarea rows="3">Add Comment here...</textarea>
            <br>
            <span><a href="#">Continue</a></span>
        </div>
        <!--end:payment-->
        <div id="confirm" class="hide">
            <table class="shopping-cart">
                <tr>
                    <th class="image">Hình đại diện</th>
                    <th class="name">Tên sản phẩm</th>
                    <th class="model">Danh mục</th>
                    <th class="quantity">Số lượng</th>
                    <th class="price">Đơn giá</th>
                    <th class="total">Tổng</th>
                </tr>
                <tbody id="divPartialViewCartList">
                @if(Model != null)
                {
                   if (Model.listCart != null)
                   {
                       for (var i = 0; i < Model.listCart.Count(); i++)
                       {
                            <tr>
                                <td class="image"><a href="#">
                                    <img title="product" alt="product" src="@Url.Content(Model.listCart[i].product.imagetb.url)" height="50" width="50"></a></td>
                                <td class="name"><a href="#">@Model.listCart[i].product.proname</a></td>
                                <td class="model">@Model.listCart[i].product.category.catname</td>
                                <td class="quantity">
                                    <!--<input type="text" size="1" value="Model[i].count" name="quantity[40]" class="span1"></td>-->
                                    @Html.TextBoxFor(m => m.listCart[i].count, new { @class = "span1", @size = "1", @name = "quantity[40]" })
                                <td class="price">@Model.listCart[i].product.prostockprice</td>
                                <td class="total">@(Model.listCart[i].count * Model.listCart[i].product.prostockprice)</td>
                            </tr>
                       }
                   }
                }
                </tbody>
            </table>
            <div class="contentbox">
                
                <!--cartoptionbox-->
                <div class="alltotal one-half">
                    <table class="alltotal">
                        <tr>
                            <td><span class="extra">Sub-Total :</span></td>
                            <td><span></span></td>
                        </tr>
                        <tr>
                            <td><span class="extra">Eco Tax (-2.00) :</span></td>
                            <td><span></span></td>
                        </tr>
                        <tr>
                            <td><span class="extra">VAT (18.2%) :</span></td>
                            <td><span></span></td>
                        </tr>
                        <tr>
                            <td><span class="extra grandtotal">Total :</span></td>
                            <td><span class="grandtotal"></span></td>
                        </tr>
                    </table>
                    <input type="submit" value="Continue Shopping">
                    <input type="submit" value="CheckOut">
                </div>
                <!--end:alltotal-->
