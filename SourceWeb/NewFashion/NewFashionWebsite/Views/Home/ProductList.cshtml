    // Call a service that takes a list as an argument
    function listProduct(idCategory,page) {
        var args = new Object();
        //alert('JQuery: ' + 1);
        
        args.page = page;
        args.idCategory = idCategory;
        $.ajax({
            url: '/home/getProductList',
            type: 'POST',
            data: {  idCategory: idCategory, page: page},
            success: function (mydata) {
                $("#divPartialViewProductList").empty().append(mydata);
            },
            error: function () {
                alert("Error");
            }
        });


    }

</script>