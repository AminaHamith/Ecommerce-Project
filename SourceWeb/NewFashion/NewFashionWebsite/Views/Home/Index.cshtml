                                            <h3>American Dress</h3>
                                            <p>
                                            <a href="@Url.Action("ProductDetail","Home")" class="link tip" title="View Detail"></a>&nbsp;
                                            <a href="cart.html" class="cart tip" title="Add to cart"></a>&nbsp;&nbsp;
                                            <a href="@Url.Content("~/Images/preview/work_1_l.jpg")" rel="prettyPhoto[gallery1]" class="zoom tip" title="Zoom" ></a></p>
