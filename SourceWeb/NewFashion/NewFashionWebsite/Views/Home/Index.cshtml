                            {
                                <h4>Sản phẩm được mua nhiều nhất</h4>
                                <ul id="mycarousel" class="jcarousel-skin-tango item da-thumbs">
                                    @foreach(var value in ViewBag.LIST_BEST_SELLERS)
                                    {
                                    <li>
                                        <img src="@Url.Content("~/Images/products/product-1.jpg")" alt="" />
