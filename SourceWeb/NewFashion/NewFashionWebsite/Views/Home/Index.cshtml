                                    </li>             
                                    }
                                </ul>
                            }
                    	</div><!--end:list_work-->
                        <div class="list_work list_work2">
                        @if (ViewBag.LIST_NEW_ARRIVAL != null)
                        {
                        <h4>Sản phẩm mới</h4>
                        <ul id="mycarouselnew" class="jcarousel-skin-tango item">
                            @foreach(var value in ViewBag.LIST_NEW_ARRIVAL)
                            {
                            <li>
                                <img src="@Url.Content(value.imagetb.url)" alt="" />
                            	<span>@value.proname<br>
                                <!--<small class="sale">$320.00</small>&nbsp;&nbsp;-->
                                <small>@value.prostockprice</small></span>
                                <!--<span class="sale">Sale</span>-->
                                <!--<span class="new">New</span>-->
                                <ul>
                                	<li><a href="@Url.Action("ProductDetail", "Home", new { idProduct = value.proid})" class="cart tip" title="Xem thông tin">Xem thông tin</a></li>
                                    <li><a href="@Url.Content("~/Images/preview/work_1_l.jpg")" rel="prettyPhoto[gallery1]" class="zoom tip" title="Zoom">Zoom</a></li>
                                    <li><a href="wishlist.html" class="wishlist tip" title="Add to Wishlist">Add Wishlist</a></li>
                                    <li><a href="@Url.Action("Compare","Home")" class="compare tip" title="Compare">Compare</a></li>
                                </ul>
                            </li>     
                            }       
                        </ul>
                        }
                    	</div><!--end:list_work-->
                    </section>
