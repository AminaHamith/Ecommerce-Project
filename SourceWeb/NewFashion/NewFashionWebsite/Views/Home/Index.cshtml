<div id="featured">
                    <div class="camera_wrap camera_emboss " id="camera_wrap_1">
                    @if (ViewBag.LIST_IMAGE_SLIDES != null)
                    {
                        foreach (var value in ViewBag.LIST_IMAGE_SLIDES)
                        {
                            <div data-thumb="@Url.Content("~/Images/slides/thumbs/bridge.jpg")" data-src="@Url.Content(value.imagetb.url)">
