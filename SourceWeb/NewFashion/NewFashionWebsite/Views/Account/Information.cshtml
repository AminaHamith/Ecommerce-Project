@model NewFashionWebsite.Models.RegisterModel
@{
    ViewBag.Title = "Information";
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
}
<section class="content">
    <h2>Thông tin tài khoản</h2>
    <!--
    <div id="divPartialViewRegister">
        Html.Partial("~/Views/Shared/PartialRegister.cshtml")
    </div>-->
    <a href="@Url.Action("ChangeInformation","Account")"><input type="submit" value="Thay đổi thông tin"></a>
@using (Html.BeginForm("ChangePassword", null, FormMethod.Post, new { @class = "form-register", id = "form-register" }))
{
    @Html.ValidationSummary(true)
    <h3><span class="red">*</span>Tài khoản</h3>
    <div class="registerbox">
        <fieldset>
            <div class="control-group">
                <label class="control-label"><span class="red">*</span>@Html.DisplayNameFor(m => m.accountModel.Username): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.accountModel.Username, new { @class = "input-xlarge" ,@readonly = true})&nbsp @Html.ValidationMessageFor(m => m.accountModel.Username)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="red">*</span>@Html.DisplayNameFor(m => m.accountModel.Email): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.accountModel.Email, new { @class = "input-xlarge" ,@readonly = true})&nbsp @Html.ValidationMessageFor(m => m.accountModel.Email)
                </div>
            </div>
        </fieldset>
    </div>
    <h3>Thông tin cá nhân)</h3>
    
            
    
    <div class="registerbox">
        <fieldset>
            <div class="control-group">
                <label class="control-label"><span class="red">*</span>@Html.DisplayNameFor(m => m.customerModel.cusfirstname): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.cusfirstname, new { @class = "input-xlarge" ,@readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.cusfirstname)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="red">*</span>@Html.DisplayNameFor(m => m.customerModel.cuslastname): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.cuslastname, new { @class = "input-xlarge" ,@readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.cuslastname)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.phonenumber1): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.customer_information.phonenumber1, new { @class = "input-xlarge" ,@readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.customer_information.phonenumber1)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.phonenumber2): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.customer_information.phonenumber2, new { @class = "input-xlarge" ,@readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.customer_information.phonenumber2)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.gender): </label>
                <div class="controls" id="gender">
                    <label>
                        @Html.DropDownListFor(m => m.customerModel.customer_information.gender, (IEnumerable<SelectListItem>)ViewBag.GENDER,new { @readonly = true})
                    </label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.birthday): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.customer_information.birthday, "{0:MM/dd/yyyy}", new { @readonly = true}) &nbsp @Html.ValidationMessageFor(m => m.customerModel.customer_information.birthday)

                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.address1): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.customer_information.address1, new { @class = "input-xlarge" , @readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.customer_information.address1)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.address2): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.customer_information.address2, new { @class = "input-xlarge" , @readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.customer_information.address2)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.address2): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.customer_information.country, new { @class = "input-xlarge" , @readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.customer_information.country)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.city): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.customer_information.city, new { @class = "input-xlarge" , @readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.customer_information.city)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.region_state): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.customer_information.region_state, new { @class = "input-xlarge" , @readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.customer_information.region_state)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.customerModel.customer_information.post_code): </label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.customerModel.customer_information.post_code, new { @class = "input-xlarge" , @readonly = true})&nbsp @Html.ValidationMessageFor(m => m.customerModel.customer_information.post_code)
                </div>
            </div>
        </fieldset>
    </div>
       
    
}

</section>
