@{
    Layout = null;
    //@Scripts.Render("~/bundles/jquery-ajax")
    //<script type="text/javascript" src="@Url.Content("~/Scripts/js/jquery-1.8.2.1.js")"></script>
    //<script type="text/javascript" src="@Url.Content("~/Scripts/js/custom.js")"></script>
}

<div id="demo-header">
    @{
        var str = "";
        if (Session["CART"] != null)
        {
            str = ((NewFashionWebsite.Models.ShoppingCartModel)Session["CART"]).listCart.Count + " Sản phẩm" + " - " +((NewFashionWebsite.Models.ShoppingCartModel)Session["CART"]).total + "VNĐ";

        }
        else
        {
            str = "0 Sản phẩm";

        }
        <a id="cart-link" href="#" title="Cart">@str</a>
        
        if(Session["CART"] != null)
        {
            <div id="cart-panel">
                <div class="item-cart">
                    <table>
                        <tbody>
                            @foreach (NewFashionBLL.shopping_cart item in ((NewFashionWebsite.Models.ShoppingCartModel)Session["CART"]).listCart)
                            {
                                <tr>
                                    <td class="image"><a href="@Url.Action("ProductDetail","Home",new {id=@item.proid})"><img width="60" height="60" src="@Url.Content(item.product.imagetb.url)" alt="product" title="product"></a></td>
                                    <td class="name"><a href="@Url.Action("ProductDetail","Home",new {id=@item.proid})">@item.product.proname</a></td>
                                    <td class="quantity">@item.count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="buttoncart">
                        <a href="@Url.Action("ShoppingCart","Home")">Giỏ hàng</a>
                        <a href="@Url.Action("Checkout","Home")">Thanh toán</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div id="cart-panel">
                <div class="item-cart">
                    <div class="buttoncart">
                        <a href="@Url.Action("ShoppingCart","Home")">Giỏ hàng</a>
                        <a href="@Url.Action("Checkout","Home")">Thanh toán</a>
                    </div>
                </div>
            </div>
        }
    }

   
</div>
