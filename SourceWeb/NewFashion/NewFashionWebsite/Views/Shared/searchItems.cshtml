@model List<NewFashionBLL.product>

<ul id="products" class="list clearfix">
@if(Model != null)
        {
            foreach(var value in Model)
            {
                <li class="da-thumbs">
                    <div class="product-thumb-hover">
                        <section class="left">
                            <img src="@Url.Content(value.imagetb.url)" alt="">
                            <!--<p class="sale">Sale</p>-->
                            <!--<p class="new">New</p>-->
                            <article class="da-animate da-slideFromRight" style="display: block;">
                                <h3>@value.proname</h3>
                                <p>
                                    <a href="@Url.Action("ProductDetail", "Home", new { idProduct = @value.proid})" class="link tip" title="View Detail"></a>&nbsp;
                                           
                                    <a href="cart.html" class="cart tip" title="Add to cart"></a>&nbsp;&nbsp;
                                           
                                    <a href="@Url.Content("~/Images/preview/work_1_l.jpg")" rel="prettyPhoto[gallery1]" class="zoom tip" title="Zoom" ></a>
                                </p>
                            </article>
                        </section>
                    </div>
                    <section class="center">
                        <h3>@value.proname</h3>
                        <em>Category: <a href="#">@value.category.catname</a></em>
                    </section>
                    <section class="right">
                        <!--<span class="price"><small>$320.00</small>&nbsp;&nbsp; $95.00</span>-->
                        <span class="price">@value.prostockprice</span>
                        <ul class="menu-button">
                            <li><a href="cart.html" class="cart tip" title="Add to Cart"></a></li>
                            <li><a href="@Url.Content("~/Images/preview/work_1_l.jpg")" rel="prettyPhoto[gallery1]" class="zoom tip" title="Zoom"></a></li>
                            <li><a href="wishlist.html" class="wishlist tip" title="Add to Wishlist"></a></li>
                            <li><a href="compare.html" class="compare tip" title="Compare"></a></li>
                            <li><a href="product-detail.html" class="link tip" title="View Detail"></a></li>
                        </ul>
                    </section>
                </li>
            }
        }
     </ul>
    <!--end:products-->
<ul id="pagination">
        @if(ViewBag.COUNT != null)
        {
            for(int i = 1 ; i <= ViewBag.COUNT ; i++)
            {
                if (ViewBag.CURRENT_PAGE == i)
                {
                    <li><p class="current" onclick="getSearchResult('@ViewBag.KEY_WORD', @i)">@i</p></li>
                }
                else
                {
                    <li><p onclick="getSearchResult('@ViewBag.KEY_WORD', @i)">@i</p></li>
                }
            }
        }
    </ul>