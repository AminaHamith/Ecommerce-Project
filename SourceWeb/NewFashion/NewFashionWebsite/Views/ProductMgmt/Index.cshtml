<!--Begin Datatables-->
<div class="row">
    <div class="col-lg-12">
        <a href="@Url.Action("Create","ProductMgmt")">Thêm sản phẩm</a>
        <div class="box">
            <header>
                <div class="icons"><i class="icon-move"></i></div>
                <h5>Danh sách sản phẩm</h5>
            </header>
            <div id="collapse4" class="body">
                @Html.Partial("~/Views/Shared/PartialProductListMgmt.cshtml")
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<!--End Datatables-->

<script>
    <!--$(function () { metisTable(); metisSortable(); });-->


    // Call a service that takes a list as an argument
    function listProduct(page) {

        //alert('JQuery: ' + 1);

        $.ajax({
            url: '/ProductMgmt/Index',
            type: 'POST',
            data: { page: page },
            success: function (mydata) {
                $("#collapse4").empty().append(mydata);
                //alert("Success");
            },
            error: function () {
                alert("Error");
            }
        });


    }
</script>